                            <h5 class="title">راه های ارتباطی</h5>
                            <ul>
                                <li><a href="https://www.instagram.com/saeedghotbipage"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                                <li><a href="https://t.me/SaeedGhotbi7"><i class="fa fa-telegram" aria-hidden="true"></i></a></li>
                                <li><a href="https://www.linkedin.com/in/saeed-ghotbi/"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                    </div> <!-- /.row -->
                </div> <!-- /.container -->
            </div> <!-- /.top-footer -->

            <div class="container">
                <div class="bottom-footer">
                    <div class="clearfix">
                        <p>&copy; کلیه حقوق این سایت متعلق به سعید قطبی میباشد.</p>
                    </div>
                </div> <!-- /.bottom-footer -->
            </div>
        </footer>
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery.2.2.3.min.js"></script>
    <!-- Popper js -->
    <script src="~/lib/popper.js/popper.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <!-- menu  -->
    <script src="~/lib/mega-menu/assets/js/custom.js"></script>

    <!-- owl.carousel -->
    <script src="~/lib/owl-carousel/owl.carousel.min.js"></script>
    <!-- js count to -->
    <script src="~/lib/jquery.appear.js"></script>
    <script src="~/lib/jquery.countTo.js"></script>
    

    <!-- Theme js -->
    <script src="~/js/theme.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
