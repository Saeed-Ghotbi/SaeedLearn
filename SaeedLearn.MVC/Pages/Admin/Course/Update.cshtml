@page "{id?}"
@model UpdateModel

@using SaeedLearn.Application.DTOs.Teacher
@using SaeedLearn.Application.DTOs.Category
<h1>Update</h1>


<div class="element-section mb-150">
    <div class="contact-us-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="contact-form">
                        <form class="form form-style-two" method="post" id="contact-form" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="messages"></div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="controls">
                                        <div class="form-group">
                                            <input asp-for="Course.Id" type="hidden">
                                            <input asp-for="Course.PicturePath" type="hidden">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Course.Name"></label>
                                            <input asp-for="Course.Name">
                                            <span asp-validation-for="Course.Name" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Course.Description"></label>
                                            <textarea asp-for="Course.Description"></textarea>
                                            <span asp-validation-for="Course.Description" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Course.Price"></label>
                                            <input asp-for="Course.Price">
                                            <span asp-validation-for="Course.Price" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Course.Picture"></label>
                                            <img src="@Model.Course.PicturePath"/>
                                            <input asp-for="Course.Picture">
                                            <span asp-validation-for="Course.Picture" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="theme-button-two">افزودن دوره</button>

                                    </div> <!-- /.controls -->

                                </div>
                                <div class="col-lg-6">
                                    <div class="controls">
                                        <div class="form-group">
                                            <select asp-for="Course.TeacherId" asp-items="@(new SelectList(Model.Teachers,nameof(TeacherDto.Id),nameof(TeacherDto.Name)))">
                                                <option>انتخاب مدرس دوره</option>
                                            </select>
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group">
                                            <select asp-for="Course.CategoryIds" asp-items="@(new SelectList(Model.Categories,nameof(CategoryDto.Id),nameof(CategoryDto.Name)))">
                                                <option>انتخاب دسته بندی دوره</option>
                                            </select>
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Course.Offer"></label>
                                            <input asp-for="Course.Offer">
                                            <span asp-validation-for="Course.Offer" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Course.ActiveCourse"></label>
                                            <input type="checkbox" asp-for="Course.ActiveCourse">
                                            <span asp-validation-for="Course.ActiveCourse" class="text-danger"></span>
                                        </div>
                                    </div> <!-- /.controls -->

                                </div>
                            </div>

                        </form>
                    </div> <!-- /.contact-form -->
                </div> <!-- /.col- -->


            </div> <!-- /.row -->
        </div> <!-- /.container -->
    </div> <!-- /.contact-us-section -->
</div>